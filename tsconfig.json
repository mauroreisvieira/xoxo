{
  "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "sourceMap": false,
        "outDir": "dist/",
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/",
                "src/types/*"
            ]
        },
        "esModuleInterop": false
    },
    "include": [
        "src/**/*"
    ]
}
